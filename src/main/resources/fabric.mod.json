    "main": ["excavation_enchantment.mod.ExcavationEnchantment"],
    "client": ["excavation_enchantment.mod.ExcavationEnchantmentClient"]
  },
  "mixins": ["excavation-enchantment.mixins.json"],
  "depends": {
    "fabricloader": ">=0.15.11",
